<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
		
	
    <bean id ="mongodb" class="com.cnpc.pms.mongodb.common.MongoDbUtil" init-method="connectMongo" >
		<property name="userName" value="${mongodb.userName}" />
		<property name="password" value="${mongodb.password}" />
		<property name="host1" value="${mongodb.host1}" />
		<property name="host2" value="${mongodb.host2}" />
		<property name="host3" value="${mongodb.host3}" />
		
	</bean>
	
		
</beans>